		<class>pe.edu.upc.tropsmart.models.entities.Transportista</class>
		<class>pe.edu.upc.tropsmart.models.entities.Servicio</class>
		<class>pe.edu.upc.tropsmart.models.entities.DetalleServicio</class>
		<class>pe.edu.upc.tropsmart.models.entities.Distrito</class>
		<class>pe.edu.upc.tropsmart.models.entities.MetodoPago</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />
		</properties>
	</persistence-unit>
</persistence>
